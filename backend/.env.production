# =====================================
# CONFIGURACIÓN DE PRODUCCIÓN
# La Pública - Sistema de Mensajería
# =====================================

# Entorno
NODE_ENV=production
PORT=3001

# Información de la aplicación
APP_NAME="La Pública"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Red social para empleados del sector público español"

# URLs y dominios
CLIENT_URL=https://lapublica.es
API_URL=https://api.lapublica.es
ALLOWED_ORIGINS=https://lapublica.es,https://www.lapublica.es,https://madrid.lapublica.es,https://cat.lapublica.es

# Base de datos PostgreSQL
DATABASE_URL=postgresql://la_publica_user:${DB_PASSWORD}@${DB_HOST}:5432/la_publica_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=la_publica_prod
DB_USER=la_publica_user
DB_PASSWORD=your-secure-database-password-here
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis para cache y sesiones
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0

# JWT y autenticación
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=BOkGrSAkmFL3O3I41N4Rrw3feWFQgGqBbBwhtoKsERAe6OPQsLNk4qPV7e-dnMM9VyGgenUCBi-o4LRrxEoobpM
VAPID_PRIVATE_KEY=MPU22N2JgqLMQJvIWf-SBlIPFXkoTHsZxjMRh1fAAYI
VAPID_SUBJECT=mailto:admin@lapublica.es

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@lapublica.es
SMTP_PASS=your-app-password-here
FROM_EMAIL=noreply@lapublica.es
FROM_NAME="La Pública"

# SSL/HTTPS
SSL_KEY_PATH=/etc/ssl/private/lapublica.key
SSL_CERT_PATH=/etc/ssl/certs/lapublica.crt
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE="Demasiadas solicitudes desde esta IP, inténtalo de nuevo más tarde"

# File uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_PATH=/var/uploads/lapublica

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/lapublica/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# OpenAI (opcional)
OPENAI_API_KEY=your-openai-api-key-for-features

# Sentry para error tracking (opcional)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Session y cookies
SESSION_SECRET=your-super-secure-session-secret-key
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
COOKIE_MAX_AGE=86400000

# CORS
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=lapublica-backups
BACKUP_S3_REGION=eu-west-1

# Comunidades Autónomas
DEFAULT_COMMUNITY=madrid
COMMUNITIES_CONFIG_PATH=/etc/lapublica/communities.json